{
    "name": "shikicinema",
    "version": "1.0.0",
    "description": "Shikicinema - player app for Shikimori",
    "author": "Smarthard",
    "repository": {
        "type": "git",
        "url": "https://github.com/Smarthard/shikicinema.git"
    },
    "license": "BSD-2-Clause",
    "main": "build/src/index.js",
    "build": {
        "asar": true,
        "files": [
            "assets/**/*",
            "build/**/*",
            "capacitor.config.*",
            "app/**/*"
        ]
    },
    "scripts": {
        "postinstall": "electron-builder install-app-deps",
        "build": "electron-builder -mwl",
        "build:mac": "electron-builder --mac",
        "build:win": "electron-builder --windows portable",
        "build:linux": "electron-builder --linux zip"
    },
    "dependencies": {
        "@capacitor-community/electron": "^4.1.0",
        "chokidar": "~3.5.2",
        "electron-is-dev": "~2.0.0",
        "electron-serve": "~1.1.0",
        "electron-unhandled": "~3.0.2",
        "electron-updater": "~4.3.9",
        "electron-window-state": "~5.0.3"
    },
    "devDependencies": {
        "electron": "22.3.25",
        "electron-builder": "~24.13.3",
        "typescript": "~4.3.5"
    },
    "keywords": [
        "capacitor",
        "electron"
    ]
}
