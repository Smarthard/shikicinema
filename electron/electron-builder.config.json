{
    "appId": "net.smarthard.shikicinema",
    "directories": {
        "buildResources": "resources"
    },
    "files": [
        "assets/**/*",
        "build/**/*",
        "capacitor.config.*",
        "app/**/*"
    ],
    "publish": {
        "provider": "github"
    },
    "nsis": {
        "allowElevation": true,
        "oneClick": false,
        "allowToChangeInstallationDirectory": true
    },
    "win": {
        "target": "nsis",
        "icon": "assets/appIcon.ico"
    },
    "mac": {
        "target": "dmg",
        "category": "Player"
    },
    "linux": {
        "target": "AppImage",
        "category": "Player"
    }
}
